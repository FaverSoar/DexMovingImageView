<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dex="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.dex.movingimageview.fragments.AutoMoverFragment">

    <it.dex.movingimageviewlib.DexMovingImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        dex:angle="45"
        dex:drawer="scale|translate|rotate"
        dex:evaluator="timeBased"
        dex:generator="base"
        dex:images_array="@array/images"
        dex:loop="true"
        dex:zoom="2" />

</FrameLayout>
